<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="10dp"
    android:background="@drawable/_bg_shadow_radius"
    >

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="90dp"
        android:layout_height="97dp"
        android:scaleType="centerCrop"

        android:src="@drawable/_1" />
    <TextView
        android:id="@+id/textDescription"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="Tên sản phẩm dsafsdfadsadfasdfsdafsdfsfadsfasdfasdfsdfdasfsdsafsdfadsaaadfasdfsdsdfsdfsdsf "
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/textNamePR"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:text="Tên sản phẩm dsafsdfadsf "
        android:maxLines="1"
        android:textSize="10dp"/>
</LinearLayout>
